@model PersonalExpenseTracker.Web.Models.ViewModel.Account.SigninViewModel;
@{
    ViewBag.Title = "Login";
}


<div class="container" style="width:500px; height:500px; padding:10px; margin-top:30px;">
    <form asp-controller="Account" asp-action="Signin" method="post">
        <div class="mb-4">
            <h2>Signin to your account</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Your email....">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" placeholder="Password...">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button class="btn btn-dark">Signin</button>
    </form>
</div>