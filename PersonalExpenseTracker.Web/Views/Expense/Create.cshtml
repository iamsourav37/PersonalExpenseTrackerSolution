@model PersonalExpenseTracker.Web.Models.ViewModel.Expense.ExpenseCreateViewModel;
@{
    ViewBag.Title = "Create Expense";
}

<div class="container" style="width:500px; height:500px; padding:10px; margin-top:30px;">
    <div class="mb-4">
        <h2>Create Expense</h2>
    </div>
    <form asp-controller="Expense" asp-action="Create" method="post">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {<div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
        <div class="mb-3">
            <label asp-for="Amount" class="form-label"></label>
            <input type="number" step="0.01" asp-for="Amount" class="form-control" placeholder="Expense Amount">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Write description about your expense..."></textarea>
        </div>
        <div class="mb-3">
            <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-select form-select-sm">
                <option value="" selected>Select the category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="ExpenseDate" class="form-label"></label>
            <input asp-for="ExpenseDate" class="form-control">
        </div>
        <button class="btn btn-dark">Create</button>
        <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>

    </form>
</div>