@model List<PersonalExpenseTracker.Web.Models.ViewModel.Expense.ExpenseViewModel>;
@{
    ViewBag.Title = "Expense List";
}


<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">All the Expenses</h1>
        <p class="lead text-dark-emphasis">
            Your Total Expense Amount: <span class="font-weight-bold">₹@Model.Sum(expense=>expense.Amount)</span>
        </p>
    </div>

    <div class="row">
        @foreach (var expense in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-success">
                            ₹ @expense.Amount
                        </h5>
                        <p class="card-text text-muted">
                            <i class="fas fa-info-circle"></i> @expense.Description
                        </p>
                        <p class="card-text">
                            <i class="fas fa-calendar-alt"></i> @expense.ExpenseDate.ToString("dddd, MMMM dd, yyyy")
                        </p>
                        <a class="btn btn-outline-primary w-100" asp-controller="Expense" asp-action="Update" asp-route-expenseId="@expense.Id">Edit</a>
                        <a class="btn btn-outline-danger w-100 mt-2" asp-controller="Expense" asp-action="Delete" asp-route-expenseId="@expense.Id" onclick="return confirm('Are you sure you want to delete this Expense?')";>Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


