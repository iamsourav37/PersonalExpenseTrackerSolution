@model PersonalExpenseTracker.Web.Models.ViewModel.User.UserEditViewModel;
@{
    ViewBag.Title = "Update Profile Page";
}


<div class="container" style="width:500px; height:500px; padding:10px; margin-top:30px;">
    <form asp-action="Edit" method="post">
        <div class="mb-4">
            <h2>Update your profile !!!</h2>
        </div>

        <div class="mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" placeholder="Your Full Name....">
        </div>
        <div class="mb-3">
            <label asp-for="Salary" class="form-label"></label>
            <input asp-for="Salary" class="form-control" placeholder="Enter your Salary...">
        </div>
        <button class="btn btn-dark">Update</button>
    </form>
</div>